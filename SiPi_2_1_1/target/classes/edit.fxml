<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="200.0"
            prefWidth="400.0"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="EditController">

    <bottom>
        <HBox prefHeight="20.0" prefWidth="200.0" BorderPane.alignment="CENTER" >
            <children>
                <Button mnemonicParsing="false" text="..." onAction="#clickBack"/>
            </children>
        </HBox>
    </bottom>

    <center>
        <VBox alignment="CENTER"
              prefHeight="200.0"
              prefWidth="100.0"
              BorderPane.alignment="CENTER">

            <children>

                <Label alignment="CENTER" contentDisplay="CENTER" text="Замена персональных данных" textAlignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="30.0" />
                    </VBox.margin>
                </Label>

                <TextField fx:id="first_name" maxHeight="40" maxWidth="400" minHeight="40.0" minWidth="400.0" prefHeight="40" prefWidth="400.0" promptText="Имя">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>

                <TextField fx:id="second_name" maxHeight="40" maxWidth="400" minHeight="40.0" minWidth="400.0" prefHeight="40" prefWidth="400.0" promptText="Фамилия">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>

                <TextField fx:id="middle_name" maxHeight="40" maxWidth="400" minHeight="40.0" minWidth="400.0" prefHeight="40" prefWidth="400.0" promptText="Отчество">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>

                <TextField fx:id="login" maxHeight="40" maxWidth="400" minHeight="40.0" minWidth="400.0" prefHeight="40" prefWidth="400.0" promptText="Новый логин">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </TextField>

                <PasswordField fx:id="password1" maxHeight="40" maxWidth="400" minHeight="40.0" minWidth="400.0" prefHeight="40" prefWidth="400.0" promptText="Новый пароль">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </PasswordField>

                <PasswordField fx:id="password2" maxHeight="40" maxWidth="400" minHeight="40.0" minWidth="400.0" prefHeight="40" prefWidth="400.0" promptText="Повторите пароль">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </PasswordField>

                <Button mnemonicParsing="false" onAction="#clickEdit" text="Изменить данные" maxHeight="40" maxWidth="400" minHeight="40.0" minWidth="400.0" prefHeight="40" prefWidth="400.0">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>

            </children>
        </VBox>
    </center>
</BorderPane>
